root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.py]
ij_visual_guides = 100

[*.rst]
max_line_length = 100
ij_wrap_on_typing = true
ij_any_wrap_long_lines = true

[Makefile]
indent_style = tab
